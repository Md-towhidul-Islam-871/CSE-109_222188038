#include <stdio.h>

int main()
{
    int arr1[100], arr2[100];
    int a, b;
       printf("Input the number of elements to be stored in the array :");
       scanf("%d",&b);
       
       for(a=0;a<b;a++)
        {
	      printf("element - %d : ",a);
	      scanf("%d",&arr1[a]);
	      arr2[a] = arr1[a];
	    }
	    
	    printf("The elements stored in the second array are: ");
        for(a=0;a<b;a++){
            printf("% d", arr1[a]);
        }
	   
    printf("\n");
    
        printf("The elements stored in the second array are: ");
        for(a=0;a<b;a++){
            printf("% d", arr2[a]);
        }
       
    return 0;
   
	       
}
