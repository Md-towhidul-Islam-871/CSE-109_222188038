#include <stdio.h>

void main() {
    char alp;

    printf("Enter a Character: ");
    scanf("%c", &alp);

    switch(alp){

        case 'a':
        case 'e':
        case 'i':
        case 'o':
        case 'u':
        case 'A':
        case 'E':
        case 'I':
        case 'O':
        case 'U':
            printf("Your given character %c is vowel\n", alp);
            break;

        default:
            printf("Your given character %c is consonant\n", alp);

    }
}
