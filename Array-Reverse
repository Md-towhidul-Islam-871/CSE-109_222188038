#include<stdio.h>
void main(){
    int i,n,a[100];
    printf("Input the values of elements:");
    scanf("%d", &n);
    
    for(i=0; i<n; i++){
        printf("elements %d:", i);
        scanf("%d", &a[i]);
    }
    
    printf("Values of stored in the array\n");
    for(i=0; i<n; i++){
        printf("%2d", a[i]);
    }
    
    
    printf("\nValues of stored in the array of reverse order\n");
    for(i=n-1; i>=0; i--){
        printf("%2d", a[i]);
    }
}
